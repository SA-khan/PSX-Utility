<Window x:Class="PSXDataFetchingApp.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSXDataFetchingApp"
        mc:Ignorable="d"
        Title="Preview Window" Icon="Images/psx.png" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Border Margin="10" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Pakistan Stock Exchange Data Preview" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Candara" FontSize="24"/>
        <!--<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" >-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                <Label x:Name="lblDate" Grid.Row="0" Grid.Column="0" Content="Date: " FontFamily="Arial" FontSize="14" VerticalAlignment="Center" />
                <Label x:Name="lblStatus" Grid.Row="0" Grid.Column="1" Content="Status: " FontFamily="Arial" FontSize="14" VerticalAlignment="Center" />
                <Label x:Name="lblVolume" Grid.Row="0" Grid.Column="2" Content="Volume: " FontFamily="Arial" FontSize="14" VerticalAlignment="Center" />
                <Label x:Name="lblValue" Grid.Row="0" Grid.Column="3" Content="Value: " FontFamily="Arial" FontSize="14" VerticalAlignment="Center" />
                <Label x:Name="lblTrades" Grid.Row="0" Grid.Column="4" Content="Trades: " FontFamily="Arial" FontSize="14" VerticalAlignment="Center" />
                <Button x:Name="btnRefresh" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"  Width="40" Height="30" Background="AliceBlue" Click="btnRefresh_Click">
                    <StackPanel HorizontalAlignment="Stretch" >
                        <Image Source="Images/refresh2.png" Height="28" Width="38" />
                        <!--<TextBlock HorizontalAlignment="Center" Width="84" Height="22" VerticalAlignment="Top" Margin="0,-31,-58,0" Text="ثبت مشتری" />-->
                    </StackPanel>
                </Button>
            </Grid>
            <!--</StackPanel>-->
        <ListView x:Name="list1" Grid.Row="2" Width="Auto">  
            <ListView.View>
                    <GridView x:Name="gridView" AllowsColumnReorder="true" ColumnHeaderToolTip="Market Summary">
                        <GridViewColumn x:Name="col1" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col2" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col3" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col4" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col5" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col6" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col7" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col8" Width="Auto"></GridViewColumn>
                        <GridViewColumn x:Name="col9" Width="Auto"></GridViewColumn>
                    </GridView>
            </ListView.View>  
        </ListView>  
    </Grid>
    </Border>
</Window>
