<Window x:Class="PSXDataFetchingApp.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSXDataFetchingApp"
        mc:Ignorable="d"
        Title="PreviewWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Border Margin="10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Pakistan Stock Exchange Data Preview" HorizontalAlignment="Center" Margin="9,10,0,0" VerticalAlignment="Top" FontFamily="Candara" FontSize="24"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label x:Name="lblDate" Content="Date:" FontFamily="Arial" FontSize="14" Margin="0 0 0 0"/>
            <Label x:Name="lblStatus" Content="Status: " FontFamily="Arial" FontSize="14" Margin="70 0 0 0"/>
            <Label x:Name="lblVolume" Content="Volume: " FontFamily="Arial" FontSize="14" Margin="70 0 0 0"/>
            <Label x:Name="lblValue" Content="Value: " FontFamily="Arial" FontSize="14" Margin="70 0 0 0"/>
            <Label x:Name="lblTrades" Content="Trades: " FontFamily="Arial" FontSize="14" Margin="70 0 0 0"/>
        </StackPanel>
        <ListView x:Name="list1" Grid.Row="2">  
            <ListView.View>
                <GridView x:Name="gridView" AllowsColumnReorder="true" ColumnHeaderToolTip="Market Summary">
                </GridView>
            </ListView.View>  
        </ListView>  
    </Grid>
    </Border>
</Window>
