                </Button>
                <Button Grid.Column="2" x:Name="btnMufapGetPKFRV" Margin="10 0 0 0" Width="200" Height="50" FontFamily="Arial" FontSize="14" Click="btnMufapGetPKFRV_Click"  HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock Text="MUFAP" FontSize="20" />
