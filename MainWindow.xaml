                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Grid.Column="3" x:Name="btnMufapGetMarketSummary" Margin="10 0 0 0" Width="200" Height="50" FontFamily="Arial" IsEnabled="True" Click="btnMufapGetMarketSummary_Click" FontSize="14"  HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock Text="MUFAP" FontSize="20" />
                            <TextBlock Text="Market Summary" FontSize="12" Foreground="Gainsboro" />
                        </StackPanel>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#373737" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="15" />
